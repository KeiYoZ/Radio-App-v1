<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/notif_display"
        android:layout_width="225dip"
        android:layout_height="wrap_content"
        android:maxWidth="120dip"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/imageNotif"
            android:layout_width="65dip"
            android:layout_height="65dip"/>

        <TextView
            android:id="@+id/notif_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/imageNotif"
            android:paddingLeft="8dip"
            android:paddingTop="8dip"
            android:text="CHERRY RADIO IS NOT PLAYING"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/notif_songartist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/imageNotif"
            android:layout_below="@+id/notif_songname"
            android:paddingLeft="8dip"
            android:paddingBottom="0dip"
            android:paddingTop="0dip"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/notif_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/notif_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stop_small"
            android:layout_toLeftOf="@+id/notif_stop"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@null"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" />

        <ImageButton
            android:id="@+id/notif_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:paddingRight="12dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

</RelativeLayout>