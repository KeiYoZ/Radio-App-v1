<?xml version="1.0" encoding="UTF-8"?>  
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
   android:layout_width="wrap_content"  
   android:layout_height="wrap_content"> 
   
    <RelativeLayout
    android:id="@+id/notif_display"
	android:layout_width="215dip"
	android:layout_height="wrap_content"
	android:maxWidth="100dip"
	android:layout_alignParentLeft="true">  
     
   <ImageView
   	 android:id="@+id/imageNotif"
   	 android:layout_width="65dip"
   	 android:layout_height="65dip"
   	 android:paddingLeft="5dip"
   	 android:paddingRight="4dip"
   	 android:paddingTop="0dip"
   	 android:paddingBottom="0dip"/>   

   <TextView  
     android:id="@+id/notif_songname"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content"  
     android:ellipsize="marquee"
     android:fadingEdge="horizontal"
     android:focusable="true"
     android:lines="1"
     android:scrollHorizontally="true"
     android:textColor="#FFFFFF"
     android:layout_toRightOf="@+id/imageNotif"
     android:fontFamily="sans-serif-light"
     android:textStyle="bold"
     android:paddingLeft="5dip"
     android:paddingTop="5dip"
     android:textSize="23sp"/>  
       
   <TextView  
     android:id="@+id/notif_songartist"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content"  
     android:textColor="#FFFFFF"
     android:fontFamily="sans-serif-thin"
     android:layout_toRightOf="@+id/imageNotif"
     android:layout_below="@+id/notif_songname"
     android:paddingLeft="5dip"
     android:paddingBottom="0dip"
     android:paddingTop="2dip"
     android:textSize="14sp"/>  
     
   </RelativeLayout>
     
   <LinearLayout 
    android:id="@+id/notif_control"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerInParent="true"
    android:gravity="center"
	android:layout_alignParentRight="true">
    
	<ImageButton  
     android:id="@+id/notif_play" 
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content"  
     android:src="@drawable/stop_small"
     android:layout_toLeftOf="@+id/notif_stop"
     android:layout_centerInParent="true"
     android:gravity="center"
     android:background="?android:selectableItemBackground"
     android:paddingRight="20dip"
     android:paddingLeft="10dip"/>  
     
 <!--         
   <ImageView  
     android:id="@+id/notif_stop"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content" 
     android:src="@drawable/cherry_logo"
     android:layout_toLeftOf="@+id/notif_close"
     android:paddingLeft="10dip"
     android:paddingRight="10dip"
     android:layout_centerInParent="true"
     android:gravity="center"/>  
--> 
   <ImageButton  
     android:id="@+id/notif_close"  
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content" 
     android:src="@drawable/close"
     android:layout_centerInParent="true"
     android:background="@null"
     android:gravity="center"
     android:paddingLeft="10dip"
     android:paddingRight="10dip"
     android:layout_alignParentBottom="true"
     android:layout_alignParentRight="true"/> 
       
   </LinearLayout>
   
 </RelativeLayout>   